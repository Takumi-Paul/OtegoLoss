<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserFragment"
    android:background="@color/beige">

    <Button
        android:id="@+id/nextInformation_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_green"
        android:text="インフォメーション"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextProcedureRegister_button" />

    <Button
        android:id="@+id/nextDeleteAccount_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="アカウント削除"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextInformation_button" />

    <Button
        android:id="@+id/nextProcedureRegister_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="生産者登録"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextSettingAddress_button" />

    <Button
        android:id="@+id/nextSettingAddress_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="配送先情報設定"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextSettingCredit_button" />

    <Button
        android:id="@+id/nextSettingCredit_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="決済情報設定"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextMeter_button" />

    <Button
        android:id="@+id/nextSettingProfile_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="プロフィール設定"
        android:backgroundTint="@color/light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileUserMessage_textView"
        android:textColor="@color/white"
        android:onClick="viewConfigProfile"/>

    <ImageView
        android:id="@+id/accountImage_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/profileUserName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ユーザ名"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountImage_imageView" />

    <TextView
        android:id="@+id/profileUserID_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="user id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileUserName_textView" />

    <TextView
        android:id="@+id/profileUserMessage_textView"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:text="プロフィールメッセージ"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileUserID_textView" />

    <Button
        android:id="@+id/nextMeter_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ロス削減メーター"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextSettingProfile_button" />

</androidx.constraintlayout.widget.ConstraintLayout>