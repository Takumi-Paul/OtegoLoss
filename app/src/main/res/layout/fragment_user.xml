<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="@color/dark_green"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/accountImage_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/user" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profileUserName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ユーザ名"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/profileUserMessage_textView"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:text="プロフィールメッセージ"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileUserName_textView" />


    <Button
        android:id="@+id/nextMeter_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/light_green"
        android:text="ロス削減メーター"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nextSettingProfile_button"
        app:layout_constraintTop_toBottomOf="@+id/profileUserMessage_textView" />

    <Button
        android:id="@+id/nextSettingCredit_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/light_green"
        android:text="決済情報設定"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextSettingProfile_button" />

    <Button
        android:id="@+id/nextSettingAddress_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/light_green"
        android:text="配送先情報設定"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nextSettingCredit_button"
        app:layout_constraintTop_toBottomOf="@+id/nextMeter_button" />

    <Button
        android:id="@+id/nextProcedureRegister_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/light_green"
        android:text="生産者登録"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextSettingCredit_button" />

    <Button
        android:id="@+id/nextInformation_button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:backgroundTint="@color/light_green"
        android:text="インフォメーション"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileUserMessage_textView" />

    <Button
        android:id="@+id/nextDeleteAccount_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/light_green"
        android:text="アカウント削除"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nextProcedureRegister_button"
        app:layout_constraintTop_toBottomOf="@+id/nextSettingAddress_button" />

    <Button
        android:id="@+id/nextSettingProfile_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/light_green"
        android:onClick="viewConfigProfile"
        android:text="プロフィール設定"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileUserMessage_textView" />


</androidx.constraintlayout.widget.ConstraintLayout>