<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentProduct"
    tools:context=".home.ViewProduct"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:orientation="horizontal" >

    </LinearLayout>

    <Button
        android:id="@+id/buy_button"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="購入"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exhibitDay_textView" />

    <Button
        android:id="@+id/comment_button"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:text="コメント"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_button" />

    <View
        android:id="@+id/backGround_view"
        android:layout_width="359dp"
        android:layout_height="636dp"
        android:background="#92FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_hoge1"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:text="生産者名"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toTopOf="@+id/backGround_view" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="円"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/price_textView"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/price_textView" />

    <TextView
        android:id="@+id/proName_textView"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toEndOf="@+id/textView_hoge1"
        app:layout_constraintTop_toTopOf="@+id/backGround_view" />

    <TextView
        android:id="@+id/productName_textView"
        android:layout_width="175dp"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textview_hoge2"
        app:layout_constraintTop_toBottomOf="@+id/proName_textView" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-150dp"
        android:layout_weight="1"
        android:text="g"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/showWeight_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/showWeight_textView" />

    <TextView
        android:id="@+id/textview_hoge2"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="商品名"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/textView_hoge1" />

    <TextView
        android:id="@+id/textview_hoge3"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="重量"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/textview_hoge2" />

    <TextView
        android:id="@+id/showWeight_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginTop="6dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textview_hoge3"
        app:layout_constraintTop_toBottomOf="@+id/productName_textView" />

    <TextView
        android:id="@+id/textview_hoge6"
        android:layout_width="67dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="出品日"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/textview_hoge5" />

    <TextView
        android:id="@+id/exhibitDay_textView"
        android:layout_width="67dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textview_hoge6"
        app:layout_constraintTop_toBottomOf="@+id/region_textView" />

    <TextView
        android:id="@+id/region_textView"
        android:layout_width="57dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textview_hoge5"
        app:layout_constraintTop_toBottomOf="@+id/price_textView" />

    <TextView
        android:id="@+id/textview_hoge5"
        android:layout_width="57dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:text="地域"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/textview_hoge4" />

    <TextView
        android:id="@+id/textview_hoge4"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="価格"
        android:textColor="#BC4749"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/productImage_imageView" />

    <TextView
        android:id="@+id/price_textView"
        android:layout_width="103dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="160dp"
        android:textColor="#BC4749"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toEndOf="@+id/textview_hoge4"
        app:layout_constraintTop_toBottomOf="@+id/productImage_imageView" />

    <ImageView
        android:id="@+id/productImage_imageView"
        android:layout_width="150dp"
        android:layout_height="112dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="105dp"
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/showWeight_textView"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/report_imageButton"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#92FFFFFF"
        android:contentDescription="@string/report"
        app:layout_constraintBottom_toBottomOf="@+id/backGround_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_button"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

</androidx.constraintlayout.widget.ConstraintLayout>