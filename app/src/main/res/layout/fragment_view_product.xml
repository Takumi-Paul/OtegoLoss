<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentProduct"
    tools:context=".home.ViewProduct"
    >

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/background"-->
<!--        android:orientation="horizontal" >-->

<!--    </LinearLayout>-->

    <View
        android:id="@+id/backGround_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:background="#92FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/green"
        android:padding="8dp"
        android:text="購入"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toEndOf="@+id/comment_button"
        app:layout_constraintTop_toBottomOf="@+id/exhibitDay_textView" />

    <Button
        android:id="@+id/comment_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:background="@color/light_brown"
        android:text="コメント"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/buy_button"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/exhibitDay_textView" />

    <Button
        android:id="@+id/proName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:minHeight="48dp"
        android:text="山田花子"
        android:textColor="@color/dark_green"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/productName_textView" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="説明"
        android:textColor="@color/blue_black"
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/price_textView" />

    <TextView
        android:id="@+id/productName_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="商品名"
        android:textColor="@color/blue_black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/productImage_imageView" />

    <TextView
        android:id="@+id/showWeight_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="重量: 10000g"
        android:textColor="@color/blue_black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/region_textView"
        app:layout_constraintTop_toBottomOf="@+id/recipe_URL" />

    <TextView
        android:id="@+id/exhibitDay_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:text="出品日: 2022/01/01"
        android:textColor="@color/blue_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/showWeight_textView" />

    <TextView
        android:id="@+id/region_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="地域: 高知県"
        android:textColor="@color/blue_black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/recipe_URL" />

    <TextView
        android:id="@+id/price_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="10000円"
        android:textColor="#BC4749"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/productName_textView" />

    <ImageView
        android:id="@+id/productImage_imageView"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toTopOf="@+id/backGround_view"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/report_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#92FFFFFF"
        android:contentDescription="@string/report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_button"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <TextView
        android:id="@+id/recipe_URL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="http://test.com/..."
        app:layout_constraintEnd_toEndOf="@+id/backGround_view"
        app:layout_constraintStart_toStartOf="@+id/backGround_view"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="配達方法: 冷凍"
        android:textColor="@color/blue_black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/showWeight_textView"
        app:layout_constraintTop_toBottomOf="@+id/recipe_URL" />

</androidx.constraintlayout.widget.ConstraintLayout>