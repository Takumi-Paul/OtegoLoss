<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shipping_addr_info_regist_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E8CF" >

    <Button
        android:id="@+id/inputAddress_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:backgroundTint="#6A994E"
        android:text="入力完了"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeNumber_editText" />

    <TextView
        android:id="@+id/houseNumber_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="丁目・番地・号"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postalAddress_editText" />

    <Spinner
        android:id="@+id/prefecture_spinner"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="#E4E4E4"
        android:backgroundTint="#E4E4E4"
        android:entries="@array/product_area"
        android:hint="都道府県を選択"
        android:splitMotionEvents="false"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prefecture_textView" />

    <TextView
        android:id="@+id/proPhoneNumber_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="電話番号"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_editText" />

    <TextView
        android:id="@+id/proAddressNumber_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="郵便番号"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proPhoneNumber_editText" />

    <TextView
        android:id="@+id/prefecture_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="都道府県"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressNumber_editText" />

    <TextView
        android:id="@+id/postal_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="市町村区"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prefecture_spinner" />

    <EditText
        android:id="@+id/proPhoneNumber_editText"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:backgroundTint="#E4E4E4"
        android:ems="10"
        android:inputType="number"
        android:maxLines="1"
        android:hint="11桁まで"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proPhoneNumber_textView" />

    <EditText
        android:id="@+id/addressNumber_editText"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:backgroundTint="#E4E4E4"
        android:ems="10"
        android:inputType="number"
        android:maxLines="1"
        android:hint="7桁まで"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proAddressNumber_textView" />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="氏名"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name_editText"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:backgroundTint="#E4E4E4"
        android:ems="10"
        android:inputType="text"
        android:maxLines="1"
        android:hint="20文字まで"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_textView" />

    <EditText
        android:id="@+id/postalAddress_editText"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:ems="10"
        android:inputType="text"
        android:maxLines="1"
        android:hint="20文字まで"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postal_textView" />

    <EditText
        android:id="@+id/homeNumber_editText"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:ems="10"
        android:inputType="text"
        android:maxLines="1"
        android:hint="20文字まで"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/houseNumber_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>