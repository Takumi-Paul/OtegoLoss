<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/shipping_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        tools:ignore="MissingConstraints"
        android:background="#CCFFFFFF"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ImageView
        android:id="@+id/shipping_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/shipping_view"
        app:layout_constraintEnd_toEndOf="@+id/shipping_view"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="@+id/shipping_view"
        app:layout_constraintTop_toTopOf="@+id/shipping_view"
        app:layout_constraintVertical_bias="0.451"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/shipping_price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/red_brown"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/shipping_view"
        app:layout_constraintEnd_toEndOf="@+id/shipping_view"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="@+id/shipping_view"
        app:layout_constraintTop_toTopOf="@+id/shipping_view"
        app:layout_constraintVertical_bias="0.482" />

    <TextView
        android:id="@+id/shipping_product_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/shipping_view"
        app:layout_constraintEnd_toEndOf="@+id/shipping_view"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="@+id/shipping_view"
        app:layout_constraintTop_toTopOf="@+id/shipping_view"
        app:layout_constraintVertical_bias="0.181" />

    <TextView
        android:id="@+id/shipping_listing_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/blue_black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/shipping_view"
        app:layout_constraintEnd_toEndOf="@+id/shipping_view"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shipping_view"
        app:layout_constraintVertical_bias="0.776" />
</androidx.constraintlayout.widget.ConstraintLayout>