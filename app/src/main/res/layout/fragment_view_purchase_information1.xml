<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E8CF" >

    <View
        android:id="@+id/purchase_view"
        android:layout_width="332dp"
        android:layout_height="379dp"
        android:layout_marginTop="32dp"
        android:background="#92FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImage_imageView" />

    <TextView
        android:id="@+id/productRegion_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="地域"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="457dp" />

    <TextView
        android:id="@+id/productWeight_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="重さ"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="414dp" />

    <TextView
        android:id="@+id/productPrice_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="価格"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="371dp" />

    <TextView
        android:id="@+id/sellerName_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="販売者名"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/productName_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="商品名"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="285dp" />

    <TextView
        android:id="@+id/productInformation_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="商品情報"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="229dp" />

    <TextView
        android:id="@+id/proShippingDay_textView"
        android:layout_width="284dp"
        android:layout_height="27dp"
        android:text="※配達には約〇日かかります"
        android:textColor="#BC4749"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="507dp" />

    <ImageView
        android:id="@+id/productImage_imageView"
        android:layout_width="150dp"
        android:layout_height="112dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="62dp" />


</androidx.constraintlayout.widget.ConstraintLayout>