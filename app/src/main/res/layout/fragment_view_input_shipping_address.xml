<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentViewInputShippingAddress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E8CF" >

    <Button
        android:id="@+id/next_button_shipping"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_green"
        android:text="次へ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteAddress_button" />

    <Button
        android:id="@+id/addAddress_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="住所を追加"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippingAddress2_view" />

    <Button
        android:id="@+id/deleteAddress_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="住所を削除"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippingAddress2_view" />

    <View
        android:id="@+id/shippingAddress1_view"
        android:layout_width="338dp"
        android:layout_height="150dp"
        android:background="#92FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <View
        android:id="@+id/shippingAddress2_view"
        android:layout_width="338dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="#92FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippingAddress1_view" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="102dp"
        android:layout_height="336dp"
        app:layout_constraintBottom_toBottomOf="@+id/shippingAddress2_view"
        app:layout_constraintEnd_toEndOf="@+id/shippingAddress1_view"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="@+id/shippingAddress1_view"
        app:layout_constraintTop_toTopOf="@+id/shippingAddress1_view"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/choice1_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:buttonTint="@color/blue_black" />

        <RadioButton
            android:id="@+id/choice2_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:buttonTint="@color/blue_black" />
    </RadioGroup>

    <TextView
        android:id="@+id/addressNumber1_textView"
        android:layout_width="104dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:text="郵便番号1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shippingAddress1_view"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="@+id/shippingAddress1_view"
        app:layout_constraintTop_toTopOf="@+id/shippingAddress1_view" />

    <TextView
        android:id="@+id/addressNumber2_textView"
        android:layout_width="104dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:text="郵便番号2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shippingAddress2_view"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="@+id/shippingAddress2_view"
        app:layout_constraintTop_toTopOf="@+id/shippingAddress2_view" />

    <TextView
        android:id="@+id/address1_textView"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginTop="64dp"
        android:text="住所1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shippingAddress1_view"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="@+id/shippingAddress1_view"
        app:layout_constraintTop_toTopOf="@+id/shippingAddress1_view" />

    <TextView
        android:id="@+id/address2_textView"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginTop="64dp"
        android:text="住所2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shippingAddress2_view"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="@+id/shippingAddress2_view"
        app:layout_constraintTop_toTopOf="@+id/shippingAddress2_view" />

    <TextView
        android:id="@+id/name1_textView"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginTop="108dp"
        android:text="名前1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shippingAddress1_view"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="@+id/shippingAddress1_view"
        app:layout_constraintTop_toTopOf="@+id/shippingAddress1_view" />

    <TextView
        android:id="@+id/name2_textView"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginTop="108dp"
        android:text="名前2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shippingAddress2_view"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="@+id/shippingAddress2_view"
        app:layout_constraintTop_toTopOf="@+id/shippingAddress2_view" />

</androidx.constraintlayout.widget.ConstraintLayout>