<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E8CF" >

    <Button
        android:id="@+id/confirmBuy_button"
        android:layout_width="167dp"
        android:layout_height="55dp"
        android:background="@color/light_green"
        android:text="購入確定"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="511dp" />

    <View
        android:id="@+id/shippingInfo_view"
        android:layout_width="321dp"
        android:layout_height="140dp"
        android:layout_marginTop="80dp"
        android:background="#92FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/creditInfo_view"
        android:layout_width="321dp"
        android:layout_height="140dp"
        android:layout_marginTop="100dp"
        android:background="#92FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippingInfo_view" />

    <TextView
        android:id="@+id/addressNumber_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="郵便番号"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/creditCompany_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="クレカ会社"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/creditNumber_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="クレカ番号"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/address_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="住所"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/creditName_textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="名義人"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="400dp" />

    <TextView
        android:id="@+id/shippingInfo_textView"
        android:layout_width="146dp"
        android:layout_height="29dp"
        android:text="配送先情報"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/creditInfo_textView"
        android:layout_width="146dp"
        android:layout_height="29dp"
        android:text="決済情報"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="280dp" />



</androidx.constraintlayout.widget.ConstraintLayout>