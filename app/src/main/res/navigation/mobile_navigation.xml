<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.otegoloss.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_mypage"
        android:name="com.example.otegoloss.ui.mypage.MypageFragment"
        android:label="@string/title_mypage"
        tools:layout="@layout/fragment_mypage" />
    <fragment
        android:id="@+id/navigation_shipping"
        android:name="com.example.otegoloss.ui.shipping.ShippingFragment"
        android:label="@string/title_shipping"
        tools:layout="@layout/fragment_shipping" />
    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.otegoloss.ui.user.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />
